<%- include('../partials/header') %>
    <div class="container"><br>
        <hr>
        <div class="card">
            <h5 class="card-header">Cadastro de Usuários</h5>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Endereço de email</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1"
                            placeholder="nome@exemplo.com">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Senha</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1"
                            placeholder="de 8 a 20 caracteres">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Repita a senha</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1"
                            placeholder="de 8 a 20 caracteres">
                    </div>
                    <h5 class="card-title">Defina aqui os níveis de acesso</h5>
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Níveis</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"
                                    value="admin" checked>
                                <label class="form-check-label" for="gridRadios1">
                                    Admin
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"
                                    value="editor">
                                <label class="form-check-label" for="gridRadios2">
                                    Editor
                                </label>
                            </div>
                            <div class="form-check disabled">
                                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3"
                                    value="visualizar" disabled>
                                <label class="form-check-label" for="gridRadios3">
                                    Visualizar
                                </label>
                            </div>
                        </div>
                    </div>
                    </fieldset>                
                    <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
        <hr>
    </div><!-- /.container -->
    <%- include('../partials/footer') %>